{
  "name": "golden-path-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Golden Path DevOps Demo - Monorepo with Cloudflare Pages + Workers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@golden-path-demo/frontend",
    "dev:api": "npm run dev --workspace=@golden-path-demo/api",
    "dev:all": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=@golden-path-demo/frontend",
    "build:api": "npm run build --workspace=@golden-path-demo/api",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=@golden-path-demo/frontend",
    "test:api": "npm run test --workspace=@golden-path-demo/api",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "deploy:api": "npm run deploy --workspace=@golden-path-demo/api"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tigayzc/golden-path-demo.git"
  },
  "keywords": [
    "cloudflare",
    "pages",
    "workers",
    "devops",
    "terraform",
    "github-actions"
  ],
  "author": "Tigayzc",
  "license": "MIT"
}
